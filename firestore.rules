rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin by email
    function isAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/admins/$(request.auth.token.email));
    }

    // Products
    match /products/{productId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();

      // Images subcollection
      match /images/{imageId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if isAdmin();
      }
    }

    // Reviews
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        (request.auth.uid == resource.data.userId || isAdmin());

      // Images subcollection
      match /images/{imageId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if isAdmin();
      }
    }

    // Recipes
    match /recipes/{recipeId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        (request.auth.uid == resource.data.userId || isAdmin());

      // Images subcollection
      match /images/{imageId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if isAdmin();
      }
    }

    // Chat posts and subcollections
    match /chat_posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        (request.auth.uid == resource.data.userId || isAdmin());

      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null &&
          (request.auth.uid == resource.data.userId || isAdmin());
      }

      match /likes/{likeId} {
        allow read, write: if request.auth != null;
      }
    }

    // Product edits
    match /product_edits/{editId} {
      allow read: if isAdmin();
      allow create: if request.auth != null;
      allow delete: if isAdmin();
    }

    // Users
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Admins
    match /admins/{adminEmail} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Catch-all: allow admin reads, block all writes
    match /{document=**} {
      allow read: if isAdmin();
      allow write: if false;
    }
  }
}